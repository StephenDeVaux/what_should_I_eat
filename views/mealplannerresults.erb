<h2>Your randomly selected meals!</h2>

<% all_recipes = all_recipes(category) %>
<% recipes = get_random_recipes(num_meals.to_i, all_recipes )%>

<form action="/shoppinglist" method=post>
    <input type="hidden" name="recipe_ids" value="<%= get_recipe_ids_from_list(recipes).join(",")  %>">
    <button>Get shopping list</button>
</form>

<section>
    <% recipes.each do |_recipe| %>
        <article>
            <a class="recipe_details_btn" href="recipe?recipe_id=<%= _recipe["id"] %>"><%= _recipe["name"]%></a>
            <img src="<%= _recipe["image_url"]%>" alt="">
        </article>
    <% end %>
</section>