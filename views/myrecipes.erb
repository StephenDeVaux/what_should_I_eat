<h2>My Recieps</h2>

<main>
    <div>
        <h4>Categories</h4>
        <% get_categories.each do |category|%>
            <a class="category_btns" href="/myrecipes?category=<%= category %>"><%= category %></a>
        <% end %>
    </div>
    <div>
        <div>
            <p> <%= find_user_recipe_list(category).count%> Recipes Page: 
                <% 1.upto number_of_pages(find_user_recipe_list(category).count, 5)  do |n|  %>
                    <a href="/myrecipes?page_num=<%= n%>&category=<%= category %>"><%= n%></a>
                <% end %>
            </p>
        </div>
        <section>
            <% find_user_recipe_list(category, recipes_pp, recipes_pp*(page_num.to_i - 1) ).each do |_recipe| %>
                <article>
                    <h3><%= _recipe["name"]%></h3>
                    <h5><%= _recipe["category"]%></h5>
                    <form class="recipe_btn" action="/userrecipe?recipe_id=<%= _recipe["id"] %>" method="post">
                    <input type="hidden" name="_method" value ="delete">
                        <button>Delete</button>
                    </form>
                    <form class="recipe_btn" action="/userrecipe/edit/?recipe_id=<%= _recipe["id"] %>" method="post">
                        <button>Edit</button>
                    </form>
                    <img src="<%= _recipe["image_url"]%>" alt="">
                </article>
            <% end %>
        </section>
    </div>
</main>