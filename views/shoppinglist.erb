<h2>Your Shopping list</h2>

<% list = find_ingredients_for_list_of_recipes( recipe_ids.split(",") )%>

<article>
    <% list.each do |item|%>
        <div>
            <p> <%= find_ingredient_name_by_id( item["ingredient_id"] )%> - Quantity = <%= item["quantity"]%>  <%=units_by_id(item["ingredient_id"])%></p>
        </div>
    <% end %>
</article>
